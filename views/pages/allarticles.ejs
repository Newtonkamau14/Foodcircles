<div class="container">
    <h1 class="mb-4">Blog Articles</h1>
    <a href='/pages/newarticle' class="btn btn-success">New Article</a>
</div>
<% articles.forEach(article => { %>
    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">
                <%= article.title %>
            </h4>
            <div class="card-subtitle text-muted mb-2">
                <%= article.createdAt.toLocaleDateString() %>
            </div>
            <div class="card-text mb-2">
                <%= article.description %>
                <a href="articles/<%= article.id %> " class="btn btn-primary">Read More</a>
            </div>
        </div>
    </div>
<% }) %>